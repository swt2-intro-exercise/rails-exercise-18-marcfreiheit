<h1>Listing authors</h1>
<table>
  <thead>
    <th>Name</th>
    <th>Homepage</th>
    <th></th> <!-- edit action -->
    <th></th> <!-- show action -->
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><a href=<%= author_path(author.id) %>><%= author.name %></a>
        <td><%= author.homepage %></td>
        <td><%= link_to 'Show', author_path(author) %>
        <td><%= link_to 'Destroy', author_path(author),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>
<a href=<%= new_author_path %>>new</a>
